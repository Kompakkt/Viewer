{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "newProjectRoot": "projects",
  "projects": {
    "Kompakkt": {
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "configurations": {
            "development": {
              "extractLicenses": false,
              "optimization": false,
              "sourceMap": true
            },
            "production": {
              "budgets": [
                {
                  "maximumWarning": "10mb",
                  "type": "initial"
                },
                {
                  "maximumWarning": "6kb",
                  "type": "anyComponentStyle"
                }
              ],
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "production",
          "options": {
            "assets": ["src/favicon.ico", "src/assets"],
            "index": "src/index.html",
            "inlineStyleLanguage": "scss",
            "namedChunks": true,
            "optimization": false,
            "outputPath": {
              "base": "dist/Kompakkt"
            },
            "polyfills": ["zone.js", "src/global-shim.ts"],
            "scripts": ["node_modules/pepjs/dist/pep.js"],
            "sourceMap": true,
            "styles": ["src/styles.scss", "src/theme.scss"],
            "tsConfig": "tsconfig.app.json",
            "browser": "src/main.ts",
            "baseHref": "/viewer/"
          }
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "Kompakkt:build"
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "development": {
              "buildTarget": "Kompakkt:build:development"
            },
            "production": {
              "buildTarget": "Kompakkt:build:production"
            }
          },
          "defaultConfiguration": "development",
          "options": {}
        }
      },
      "prefix": "app",
      "projectType": "application",
      "root": "",
      "sourceRoot": "src"
    },
    "komponents": {
      "projectType": "library",
      "root": "projects/komponents",
      "sourceRoot": "projects/komponents/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/komponents/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/komponents/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/komponents/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/komponents/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:application": {
      "strict": true
    },
    "@schematics/angular:class": {
      "skipTests": true
    },
    "@schematics/angular:component": {
      "skipTests": true,
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "skipTests": true
    },
    "@schematics/angular:guard": {
      "skipTests": true
    },
    "@schematics/angular:interceptor": {
      "skipTests": true
    },
    "@schematics/angular:module": {},
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "version": 1,
  "cli": {
    "analytics": false
  }
}
